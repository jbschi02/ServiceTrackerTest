<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ServiceTrackerApp.ChangePassword" Title="Change_Password">
	<ContentPage.Content>

        <StackLayout BackgroundColor = "#d3d3d3">
            
            <Label Text = "Change Password" HorizontalOptions = "Center" FontSize = "35" TextColor = "Black" Margin = "30">
            </Label>

            <Label Text= "You are logging in for the first time, please change your password" HorizontalTextAlignment="Center" FontSize="13" TextColor="Red">
            </Label>

            <Entry x:Name = "usernameField" Placeholder="Username" Margin="30, 150, 30, 0" TextColor="Black" >
            </Entry>

            <Entry x:Name = "oldPassword" Placeholder="Old Password" IsPassword="true" Margin="30, 0, 30, 0" TextColor="Black">
            </Entry>

            <Entry x:Name = "password" Placeholder = "New Password" IsPassword = "true" Margin = "30, 0, 30, 0" TextColor = "Black">
            </Entry>

            <Entry x:Name = "confirmPassword" Placeholder = "Confirm Password" IsPassword = "true" Margin = "30, 0, 30, 0" TextColor = "Black">
            </Entry>

            <Button Text = "Submit" Margin = "30" BackgroundColor = "Gray" TextColor = "White" Clicked = "Handle_Clicked">
            </Button>
        </StackLayout>
        
	</ContentPage.Content>
</ContentPage>
